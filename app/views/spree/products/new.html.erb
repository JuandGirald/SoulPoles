<div class="col-sm-12" data-hook="product_progress"><%= product_progress %></div>
<%= render partial: 'spree/shared/error_messages', locals: { target: @product } %>

<nav class="navbar navbar2 ">
  <div class="container">
    <div class="text-center">
      <% @top_images.each do |image| %>
        <%= image_tag image[:url], :itemprop => "image", :class => "top_image hidden", alt: image[:alt] %>
      <% end %>
    </div>
  </div>
</nav>
<hr>  

