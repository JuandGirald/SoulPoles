<% tip_colors = @product.option_types.find_by_name("tip-color").option_values %>
<%= hidden_field_tag "disabled", @product.tip_right.nil? && @product.tip_left.nil? ? true : false %>
<div id="custom-tip">
  <div class="col-xs-4 text-center">
    <h3 class="select-subtitle">left tip color</h3>

    <ul class="col-xs-12 basket left-tip list-inline">
      <% tip_colors.each do |value| %>
        <% classes = ["option-value"] %>
        <% css_classes = 'select' if value.presentation == @product.tip_left %>
        <% classes << 'with-image' if value.has_image? %>
        <li value="<%= value.presentation %>" class="square-boxes <%= css_classes %>" style="background-color:<%= value.presentation %>"><%= link_to content_tag(:span), "#", :title => value.presentation, :class => classes.join(" ") %></li>
      <% end %>
      <%= hidden_field_tag "product[tip_left]", @product.tip_left %>
    </ul>
  </div>

  <div class="col-xs-4 text-center">
    <h3 class="select-subtitle">right tip color</h3>

    <ul class="col-xs-12 basket right-tip list-inline">
      <% tip_colors.each do |value| %>
        <% classes = ["option-value"] %>
        <% css_classes = 'select' if value.presentation == @product.tip_right %>
        <% classes << 'with-image' if value.has_image? %>
        <li value="<%= value.presentation %>" class="square-boxes <%= css_classes %>" style="background-color:<%= value.presentation %>"><%= link_to content_tag(:span), "#", :title => value.presentation, :class => classes.join(" ") %></li>
      <% end %>
      <%= hidden_field_tag "product[tip_right]", @product.tip_right %>
    </ul>
   
  </div> 
</div>
