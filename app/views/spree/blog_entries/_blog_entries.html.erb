<div id="blog_entry_container">
  <% if !@blog_entries.empty? %>
    <div class="container padtop50 padbot40">
      <div class="row">
      
        <!-- MAIN CONTENT BEGINS -->
        <div class="col-md-9">
          <div id="primary" class="content-area">
            <main id="main" class="site-main" role="main">
            <div class="wowitemboxlist">
              <% @blog_entries.each do |blog_entry| %>
                  <%= render :partial => 'spree/blog_entries/blog_entry', :locals => {:blog_entry => blog_entry} %>
              <% end %>
              <!-- .wowitembox-->
            </div>
            </main>
          </div>
        </div>
        <!-- MAIN CONTENT ENDS -->
      </div>
    </div>

    <%= paginate @blog_entries %>
  <% else %>
    <p id="no_entries"><%= Spree.t(:no_blog_entries) %></p>
  <% end %>
</div>

