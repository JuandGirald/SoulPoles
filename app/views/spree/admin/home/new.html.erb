<% content_for :page_title do %>
  <%= Spree.t(:home_page) %>
<% end %>

<%= form_for @cms_field, :via => :post, :url => admin_home_index_path do |f| %>
  <fieldset data-hook="home_page">
    <div class="cms_booleans row">
      <div class="col-xs-3">
        <%= f.field_container :category_top do %>
          <%= f.label :category_top, raw(Spree.t(:category_top)) %>
          <%= f.check_box :category_top,  {}, 'true', 'false' %>
          <%= f.error_message_on :category_top %>
        <% end %>
      </div>
      <div class="col-xs-3">
        <%= f.field_container :category_bottom do %>
          <%= f.label :category_bottom, raw(Spree.t(:category_bottom)) %>
          <%= f.check_box :category_bottom,  {}, 'true', 'false' %>
          <%= f.error_message_on :category_bottom %>
        <% end %>  
      </div>
      <div class="col-xs-3">
        <%= f.field_container :is_banner do %>
          <%= f.label :is_banner, raw(Spree.t(:is_banner)) %>
          <%= f.check_box :is_banner,  {}, 'true', 'false' %>
          <%= f.error_message_on :is_banner %>
        <% end %>
      </div>
      <div class="col-xs-3">
        <%= f.field_container :is_banner do %>
          <%= f.label :is_banner, raw(Spree.t(:is_banner)) %>
          <%= f.check_box :is_banner,  {}, 'true', 'false' %>
          <%= f.error_message_on :is_banner %>
        <% end %>
      </div>
      
    </div>
    <%= f.field_container :name, :class => ['form-group'] do %>
      <%= f.label :product_title, Spree.t(:product_title) %> <span class="required">*</span>
      <%= f.text_field :product_title, :class => 'form-control title' %>
    <% end %>

    <%= f.field_container :content, :class => ['form-group'] do %>
      <%= f.label :content, Spree.t(:content) %> <span class="required">*</span>
      <%= f.text_area :content, :rows => 6, :class => 'form-control title', :id => "cms_content_area" %>
      <%= f.error_message_on :content %>
    <% end %>

    <%= f.fields_for :images do |ff| %>
      <div data-hook="file" class="form-group">
        <%= ff.label :attachment, Spree.t(:filename) %>
        <%= ff.file_field :attachment %>
        <%= ff.label :alt, Spree.t(:url_text) %>
        <%= ff.text_area :alt, :rows => 1, :class => 'form-control' %>

        <% if ff.object.persisted? %>
          <%= ff.check_box :_destroy %>
          <%= ff.label :_destroy, "Destroy" %>
        <% end %>
      </div>
    <% end %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.save'), 'ok', 'submit', {class: 'btn-success'} %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), admin_home_index_path, :icon => 'delete' %>
    </div>
  </fieldset>
<% end %>
