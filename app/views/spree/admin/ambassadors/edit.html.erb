<% content_for :page_title do %>
  <%= Spree.t(:ambassador) %>
<% end %>

<%= form_for @ambassador, :url => url_for(:controller => 'ambassadors', :action => 'update')  do |f| %>
  <fieldset>
    <%= render :partial => 'form', :locals => { f: f, ambassador: @ambassador } %>
    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'refresh', 'submit', {class: 'btn-success'} %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), admin_ambassadors_path, :icon => 'delete' %>
    </div>


  </fieldset>
<% end %>